# svn bonus
alias s='svn st'
alias u='svn up'
alias d='svn di'

# svn
alias scm='svn ci -m " "'
alias sc='svn ci'

alias ss='svn st'
alias ssm='svn st | grep M'
alias ssq='svn st -q'
alias si='svn info'

alias sp='svn up'

alias sd='svn di'
alias sdf='svn di --force'
alias sdv='svn di | vim -'
alias sdfv='svn di --force | vim -'

alias slm='svn log -v | more'
alias slh='svn log | head'
alias shr="svn log -r COMMITTED -q --incremental | awk '\$1 ~ /r/ {print(\$1)}'"

alias sr='svn revert'

alias srw='svn resolve --accept working'

function san {
	    for i in `svn st | grep ? | awk '{print($2)}'`; do svn add "$i@"; done
}
export -f san;

function sdm {
	    for i in `svn st | grep ! | awk '{print($2)}'`; do svn del "$i@"; done
}
export -f sdm;

function sra {
	    for i in `svn st -q | grep 'M' | awk '{print($2)}'`; do svn revert "$i"; done
			    for i in `svn st -q | grep ! | awk '{print($2)}'`; do svn revert "$i"; done
					    for i in `svn st -q | grep '@' | awk '{print($2)}'`; do svn revert "$i@"; done
}
export -f sra;

function sbv {
	    svn blame $1 | vim -
}
export -f sbv;



profilelist=(
~/.my_bash_profile/.bash_profile_directory
~/.my_bash_profile/.bash_profile_svn
~/.my_bash_profile/.bash_profile_git
~/.my_bash_profile/.bash_profile_rake
~/.my_bash_profile/.bash_profile_pod
~/.my_bash_profile/.bash_profile_common
)

for file in ${profilelist[@]}
do
	if [ -f $file ]; then
	   source $file
	fi
done

